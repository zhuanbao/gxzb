										<endellipsis>1</endellipsis>
										<text>去</text>
									</attr>
								</obj>
								<obj id="UpdateCardDriveWnd.Content.UpdateDrive.Desc4" class="TextLinkEx">
									<attr>
										<left>15+1</left>
										<top>20+3+20+3</top>
										<width>64</width>
										<height>20</height>
										<HAlign>left</HAlign>
