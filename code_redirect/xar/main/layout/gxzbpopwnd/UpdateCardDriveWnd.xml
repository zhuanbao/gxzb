										<left>0</left>
										<top>0</top>
										<width>208</width>
										<height>20</height>
										<valign>top</valign>
										<halign>left</halign>
										<textcolor>6D5539</textcolor>
										<font>font.text16</font>
										<endellipsis>1</endellipsis>
										<text>显卡驱动程序更新完之后，请</text>
									</attr>
								</obj>
								<obj id="UpdateCardDriveWnd.Content.Restart.Desc2" class="TextLinkEx">
									<attr>
										<left>208</left>
										<top>0</top>
										<width>96</width>
										<height>20</height>
										<HAlign>left</HAlign>
										<VAlign>top</VAlign>
										<Text>重新启动赚宝</Text>
										<Font>font.text16</Font>
										<TextColor>317FFF</TextColor>
										<TextHoverColor>317FFF</TextHoverColor>
										<Underline>false</Underline>
