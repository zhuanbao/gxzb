										<TextColor>317FFF</TextColor>
										<TextHoverColor>317FFF</TextHoverColor>
										<Underline>false</Underline>
									</attr>
									<eventlist>
										<event name="OnClick" file="UpdateCardDriveWnd.xml.lua" func="OnClickUpdateDrive" />
									</eventlist>
								</obj>
								<obj id="UpdateCardDriveWnd.Content.UpdateDrive.Desc5" class="TextObject">
