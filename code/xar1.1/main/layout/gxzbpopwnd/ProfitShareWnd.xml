<xlue>
	<objtreetemplate id="GXZB.ProfitShareWndTree" class="ObjectTreeTemplate">
		<attr>
			<left>0</left>
			<top>0</top>
			<width>480</width>
			<height>480</height>
		</attr>
		<obj id="root" class="TextureObject">
			<attr>
				<left>0</left>
				<top>0</top>
				<width>480</width>
				<height>480</height>
				<texture>common-bkg</texture>
			</attr>	
			<children>
				<obj id="ProfitShareWnd.Caption" class="CaptionObject">
					<attr>
						<left>0</left>
						<top>0</top>
						<width>father.width</width>
						<height>father.height</height>
					</attr>
					<children>
						<obj id="ProfitShareWnd.TitleBar" class="LayoutObject">
							<attr>
								<left>0</left>
								<top>0</top>
								<width>father.width</width>
								<height>30</height>
							</attr>
							<children>
								<obj id="ProfitShareWnd.Close.Btn" class="TipAddin.Button">
									<attr>
										<left>father.width-25</left>
										<top>9</top>
										<width>12</width>
										<height>12</height>
										<NormalBkgID>GXZB.Caption.BtnClose.Normal</NormalBkgID>
										<DownBkgID>GXZB.Caption.BtnClose.Down</DownBkgID>
										<HoverBkgID>GXZB.Caption.BtnClose.Hover</HoverBkgID>
										<DisableBkgID>GXZB.Caption.BtnClose.Normal</DisableBkgID>
									</attr>
									<eventlist>
										<event name="OnClick" file="ProfitShareWnd.xml.lua" func="OnClickClose" />
									</eventlist>	
								</obj>
								<obj id="ProfitShareWnd.Title.Text" class="TextObject">
									<attr>
										<left>18</left>
										<top>5</top>
										<width>70</width>
										<height>20</height>
										<valign>center</valign>
										<halign>left</halign>
										<textcolor>DDDDDD</textcolor>
										<font>font.text16</font>
										<text>共享赚宝</text>

									</attr>
								</obj>
							</children>
						</obj>
						<obj id="ProfitShareWnd.Content" class="LayoutObject">
							<attr>
								<left>0</left>
								<top>30</top>
								<width>father.width</width>
								<height>father.height-30</height>
							</attr>
							<children>
								<obj id="ProfitShareWnd.Content.Title" class="TextObject">
									<attr>
										<left>(father.width-300)/2</left>
										<top>10</top>
										<width>300</width>
										<height>20</height>
										<valign>center</valign>
										<halign>center</halign>
										<textcolor>DDDDDD</textcolor>
										<font>font.text18.bold</font>
										<text>分享赚分成</text>
									</attr>
								</obj>
								<obj id="ProfitShareWnd.Content.Desc" class="TextObject">
									<attr>
										<left>(father.width-400)/2</left>
										<top>10+20</top>
										<width>400</width>
										<height>60</height>
										<valign>center</valign>
										<halign>left</halign>
										<textcolor>DDDDDD</textcolor>
										<font>font.text13</font>
										<multiline>1</multiline>
										<text>微信扫描下面的二维码，关注共享赚宝公众号，分享到朋友圈或微信群，邀请好友一起赚宝，当你的好友赚取收益时，你也会有不菲的分成哦!</text>
									</attr>
								</obj>
								<obj id="ProfitShareWnd.Content.ShareQRCode" class="ImageObject">
									<attr>
										<left>(father.width-250)/2</left>
										<top>10+20+60+15</top>
										<valign>center</valign>
										<halign>center</halign>
										<zorder>50</zorder>
										<drawmode>1</drawmode>
										<antialias>2</antialias>
										<width>250</width>
										<height>250</height>
										<image>GXZB.Share.QRcode</image>
									</attr>
								</obj>
							</children>
						</obj>
					</children>
				</obj>
			</children>
		</obj>
	</objtreetemplate>

    <hostwndtemplate id="GXZB.ProfitShareWnd" class="FrameHostWnd">
        <attr>
            <layered>1</layered>
            <left>0</left>
            <top>0</top>
            <width>480</width>
			<height>480</height>
            
            <topmost>0</topmost>
            <visible>1</visible>
            <enable>1</enable>
            <maxbox>0</maxbox>
            <minbox>1</minbox>
            <minwidth>50</minwidth>
            <minheight>50</minheight>
			<sysmenu>0</sysmenu>
			<appwindow>1</appwindow>
            <fps>30</fps>
			<blur>1</blur>
        </attr>
		 <eventlist>
			<event name="OnShowWindow" file="ProfitShareWnd.xml.lua" func="OnShowWindow" />
        </eventlist>
    </hostwndtemplate>
</xlue>
