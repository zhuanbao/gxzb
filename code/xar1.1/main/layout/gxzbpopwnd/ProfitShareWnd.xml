<xlue>
	<objtreetemplate id="GXZB.ProfitShareWndTree" class="ObjectTreeTemplate">
		<attr>
			<left>0</left>
			<top>0</top>
			<width>500</width>
			<height>420</height>
		</attr>
		<obj id="root" class="TextureObject">
			<attr>
				<left>0</left>
				<top>0</top>
				<width>500</width>
				<height>420</height>
				<texture>common-bkg</texture>
			</attr>	
			<children>
				<obj id="ProfitShareWnd.Caption" class="CaptionObject">
					<attr>
						<left>0</left>
						<top>0</top>
						<width>father.width</width>
						<height>father.height</height>
					</attr>
					<children>
						<obj id="ProfitShareWnd.TitleBar" class="LayoutObject">
							<attr>
								<left>0</left>
								<top>0</top>
								<width>father.width</width>
								<height>30</height>
							</attr>
							<children>
								<obj id="ProfitShareWnd.TitleBar.Logo" class="ImageObject">
									<attr>
										<left>10</left>
										<top>5</top>
										<width>14</width>
										<height>13</height>
										<image>GXZB.Caption.Logo</image>
									</attr>
								</obj>
								<obj id="ProfitShareWnd.TitleBar.Title" class="TextObject">
									<attr>
										<left>10+20+5</left>
										<top>0</top>
										<width>200</width>
										<height>father.height</height>
										<text>共享赚宝</text>
										<textcolor>system.black</textcolor>
										<font>font.default12</font>
										<valign>center</valign>
									</attr>
								</obj>
								<obj id="ProfitShareWnd.TitleBar.CloseBtn" class="TipAddin.Button">
									<attr>
										<left>father.width-25</left>
										<top>8</top>
										<width>15</width>
										<height>15</height>
										<NormalBkgID>GXZB.Caption.BtnClose.Normal</NormalBkgID>
										<DownBkgID>GXZB.Caption.BtnClose.Down</DownBkgID>
										<HoverBkgID>GXZB.Caption.BtnClose.Hover</HoverBkgID>
										<DisableBkgID>GXZB.Caption.BtnClose.Normal</DisableBkgID>
									</attr>
									<eventlist>
										<event name="OnClick" file="MachineCheckWnd.xml.lua" func="OnClickClose" />
										<event name="OnMouseEnter">
											local self = ...
											local hoverimage = self:GetObject("hoverimage")
											if not hoverimage then
												local objFactory = XLGetObject("Xunlei.UIEngine.ObjectFactory")
												hoverimage = objFactory:CreateUIObject("hoverimage", "ImageObject")
												self:AddChild(hoverimage)
												hoverimage:SetObjPos(-5, -9, 20, -6)
												hoverimage:SetResID("GXZB.Title.Hoverimage")
											end
											hoverimage:SetVisible(true)
										</event>
										<event name="OnMouseLeave">
											local self = ...
											local hoverimage = self:GetObject("hoverimage")
											if hoverimage then
												hoverimage:SetVisible(false)
											end
										</event>
									</eventlist>	
								</obj>
							</children>
						</obj>
						<obj id="ProfitShareWnd.Content" class="LayoutObject">
							<attr>
								<left>0</left>
								<top>30</top>
								<width>father.width</width>
								<height>father.height-30</height>
							</attr>
							<children>
								<obj id="ProfitShareWnd.Content.Title" class="TextObject">
									<attr>
										<left>(father.width-300)/2</left>
										<top>35</top>
										<width>300</width>
										<height>20</height>
										<valign>center</valign>
										<halign>center</halign>
										<textcolor>DDDDDD</textcolor>
										<font>font.text18</font>
										<text>分享赚分成</text>
									</attr>
								</obj>
								<obj id="ProfitShareWnd.Content.Desc" class="TextObject">
									<attr>
										<left>(father.width-330)/2</left>
										<top>35+20+10</top>
										<width>320</width>
										<height>70</height>
										<valign>center</valign>
										<halign>left</halign>
										<textcolor>DDDDDD</textcolor>
										<!--texttype>texttype</texttype>
										<linegap>6</linegap-->
										<font>font.text13</font>
										<multiline>1</multiline>
										<text>微信扫描下面的二维码，关注共享赚宝公众号，分享到朋友圈或微信群，邀请好友一起赚宝，当你的好友赚取收益时，你也会有不菲的分成哦!</text>
									</attr>
								</obj>
								<obj id="ProfitShareWnd.Content.QRCode.Bkg" class="TextureObject">
									<attr>
										<left>(father.width-197)/2</left>
										<top>35+20+20+70+10</top>
										<width>195</width>
										<height>195</height>
										<texture>GXZB.QRCodePanel.QRCodeBkg</texture>
									</attr>
									<children>	
										<obj id="ProfitShareWnd.Content.ShareQRCode" class="ImageObject">
											<attr>
												<left>2</left>
												<top>2</top>
												<valign>center</valign>
												<halign>center</halign>
												<zorder>50</zorder>
												<drawmode>1</drawmode>
												<antialias>2</antialias>
												<width>191</width>
												<height>191</height>
												<image>GXZB.Share.QRcode</image>
											</attr>
										</obj>
									</children>
								</obj>
							</children>
						</obj>
					</children>
				</obj>
			</children>
		</obj>
	</objtreetemplate>

    <hostwndtemplate id="GXZB.ProfitShareWnd" class="FrameHostWnd">
        <attr>
            <layered>1</layered>
            <left>0</left>
            <top>0</top>
            <width>500</width>
			<height>420</height>
            
            <topmost>0</topmost>
            <visible>1</visible>
            <enable>1</enable>
            <maxbox>0</maxbox>
            <minbox>1</minbox>
            <minwidth>50</minwidth>
            <minheight>50</minheight>
			<sysmenu>0</sysmenu>
			<appwindow>1</appwindow>
            <fps>30</fps>
			<blur>1</blur>
        </attr>
		 <eventlist>
			<event name="OnShowWindow" file="ProfitShareWnd.xml.lua" func="OnShowWindow" />
        </eventlist>
    </hostwndtemplate>
</xlue>
