<xlue>
	<objtreetemplate id="GXZB.UpdateWndTree" class="ObjectTreeTemplate">
		<attr>
			<left>0</left>
			<top>0</top>
			<width>398</width>
			<height>190</height>
		</attr>
		<obj id="root" class="TextureObject">
			<attr>
				<left>0</left>
				<top>0</top>
				<width>398</width>
				<height>190</height>
				<texture>common-bkg</texture>
			</attr>	
			<children>
				<obj id="UpdateWnd.Caption" class="CaptionObject">
					<attr>
						<left>0</left>
						<top>0</top>
						<width>father.width</width>
						<height>father.height</height>
					</attr>
					<children>
						<obj id="UpdateWnd.Caption.CloseBtn" class="TipAddin.Button">
							<attr>
								<left>father.width-25</left>
								<top>9</top>
								<width>12</width>
								<height>12</height>
								<NormalBkgID>GXZB.Caption.BtnClose.Normal</NormalBkgID>
								<DownBkgID>GXZB.Caption.BtnClose.Down</DownBkgID>
								<HoverBkgID>GXZB.Caption.BtnClose.Hover</HoverBkgID>
								<DisableBkgID>GXZB.Caption.BtnClose.Normal</DisableBkgID>
							</attr>
							<eventlist>
								<event name="OnClick" file="UpdateWnd.xml.lua" func="OnClickClose" />
							</eventlist>	
						</obj>
						<obj id="UpdateWnd.Title" class="TextObject">
							<attr>
								<left>18</left>
								<top>10</top>
								<width>70</width>
								<height>20</height>
								<valign>center</valign>
								<halign>left</halign>
								<textcolor>DDDDDD</textcolor>
								<font>font.text16</font>
								<text>检查更新</text>
							</attr>
						</obj>
						<obj id="UpdateWnd.Logo" class="ImageObject">
							<attr>
								<left>28</left>
								<top>80</top>
								<width>50</width>
								<height>50</height>
								<image>logo-mid</image>
							</attr>
						</obj>
						<obj id="UpdateWnd.Content.TextBig" class="TextObject">
							<attr>
								<left>37</left>
								<top>50</top>
								<width>150</width>
								<height>36</height>
								<valign>top</valign>
								<halign>left</halign>
								<textcolor>DDDDDD</textcolor>
								<font>font.text16</font>
								<text>发现了新版本</text>
								<visible>0</visible>
							</attr>
						</obj>
						<obj id="UpdateWnd.Content.TextMain" class="TextObject">
							<attr>
								<left>108</left>
								<top>63</top>
								<width>260</width>
								<height>40</height>
								<valign>center</valign>
								<halign>left</halign>
								<textcolor>DDDDDD</textcolor>
								<font>font.text14</font>
								<text>你的共享赚宝已经是最新版本，无需更新！</text>
								<multiline>1</multiline>
							</attr>
						</obj>
						<obj id="UpdateWnd.Content.TextVersion" class="TextObject">
							<attr>
								<left>107</left>
								<top>105</top>
								<width>150</width>
								<height>20</height>
								<valign>center</valign>
								<halign>left</halign>
								<textcolor>999999</textcolor>
								<font>font.text12</font>
								<text>版本：1.0.0.1</text>
								<visible>0</visible>
							</attr>
						</obj>
						<obj id="UpdateWnd.Sure.Btn" class="TipAddin.Button">
							<attr>
								<Text>确定</Text>
								<TextFont>font.text16</TextFont>
								<TextColor>DDDDDD</TextColor>
								<left>father.width-141</left>
								<top>father.height-50</top>
								<width>73</width>
								<height>30</height>
								<NormalBkgID>setting-btn-normal</NormalBkgID>
								<DownBkgID>setting-btn-normal</DownBkgID>
								<HoverBkgID>setting-btn-hover</HoverBkgID>
								<DisableBkgID>setting-btn-hover</DisableBkgID>
							</attr>
							<eventlist>
								<event name="OnClick" file="UpdateWnd.xml.lua" func="OnClickClose" />
							</eventlist>	
						</obj>
						<obj id="UpdateWnd.OneKeyUpdate.Btn" class="TipAddin.Button">
							<attr>
								<Text>一键升级</Text>
								<TextFont>font.text16</TextFont>
								<TextColor>DDDDDD</TextColor>
								<left>father.width-266</left>
								<top>father.height-65</top>
								<width>153</width>
								<height>49</height>
								<NormalBkgID>setting-btn-normal</NormalBkgID>
								<DownBkgID>setting-btn-normal</DownBkgID>
								<HoverBkgID>setting-btn-hover</HoverBkgID>
								<DisableBkgID>setting-btn-hover</DisableBkgID>
							</attr>
							<eventlist>
								<event name="OnClick" file="UpdateWnd.xml.lua" func="OnClickUpdateBtn" />
							</eventlist>	
						</obj>
						
					</children>
				</obj>
			</children>
		</obj>
	</objtreetemplate>

    <hostwndtemplate id="GXZB.UpdateWnd" class="ModalHostWnd">
        <attr>
            <layered>1</layered>
            <left>0</left>
            <top>0</top>
            <width>520</width>
            <height>282</height>
            
            <topmost>0</topmost>
            <visible>1</visible>
            <enable>1</enable>
            <maxbox>0</maxbox>
            <minbox>1</minbox>
            <minwidth>50</minwidth>
            <minheight>50</minheight>
			<sysmenu>0</sysmenu>
			<appwindow>1</appwindow>
            <fps>30</fps>
			<blur>1</blur>
        </attr>
		 <eventlist>
			<event name="OnCreate" file="UpdateWnd.xml.lua" func="OnCreate" />
        </eventlist>
    </hostwndtemplate>
</xlue>
