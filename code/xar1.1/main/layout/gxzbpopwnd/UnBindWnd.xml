<xlue>
	<objtreetemplate id="GXZB.UnBindWndTree" class="ObjectTreeTemplate">
		<attr>
			<left>0</left>
			<top>0</top>
			<width>500</width>
			<height>280</height>
		</attr>
		<obj id="root" class="TextureObject">
			<attr>
				<left>0</left>
				<top>0</top>
				<width>500</width>
				<height>280</height>
				<texture>common-bkg</texture>
			</attr>	
			<children>
				<obj id="UnBindWnd.Caption" class="CaptionObject">
					<attr>
						<left>0</left>
						<top>0</top>
						<width>father.width</width>
						<height>father.height</height>
					</attr>
					<children>
						<obj id="UnBindWnd.TitleBar" class="LayoutObject">
							<attr>
								<left>0</left>
								<top>0</top>
								<width>father.width</width>
								<height>30</height>
							</attr>
							<children>
								<obj id="UnBindWnd.TitleBar.Logo" class="ImageObject">
									<attr>
										<left>10</left>
										<top>5</top>
										<width>14</width>
										<height>13</height>
										<image>GXZB.Caption.Logo</image>
									</attr>
								</obj>
								<obj id="UnBindWnd.TitleBar.Title" class="TextObject">
									<attr>
										<left>10+20+5</left>
										<top>0</top>
										<width>200</width>
										<height>father.height</height>
										<text>解除绑定</text>
										<textcolor>system.black</textcolor>
										<font>font.default12</font>
										<valign>center</valign>
									</attr>
								</obj>
								<obj id="UnBindWnd.TitleBar.CloseBtn" class="TipAddin.Button">
									<attr>
										<left>father.width-25</left>
										<top>8</top>
										<width>14</width>
										<height>14</height>
										<NormalBkgID>GXZB.Caption.BtnClose.Normal</NormalBkgID>
										<DownBkgID>GXZB.Caption.BtnClose.Down</DownBkgID>
										<HoverBkgID>GXZB.Caption.BtnClose.Hover</HoverBkgID>
										<DisableBkgID>GXZB.Caption.BtnClose.Normal</DisableBkgID>
									</attr>
									<eventlist>
										<event name="OnClick" file="UnBindWnd.xml.lua" func="OnClickCloseDialog" />
										<event name="OnMouseEnter">
											local self = ...
											local hoverimage = self:GetObject("hoverimage")
											if not hoverimage then
												local objFactory = XLGetObject("Xunlei.UIEngine.ObjectFactory")
												hoverimage = objFactory:CreateUIObject("hoverimage", "ImageObject")
												self:AddChild(hoverimage)
												hoverimage:SetObjPos(-5, -9, 20, -6)
												hoverimage:SetResID("GXZB.Title.Hoverimage")
											end
											hoverimage:SetVisible(true)
										</event>
										<event name="OnMouseLeave">
											local self = ...
											local hoverimage = self:GetObject("hoverimage")
											if hoverimage then
												hoverimage:SetVisible(false)
											end
										</event>
									</eventlist>	
								</obj>
							</children>
						</obj>
						<obj id="UnBindWnd.Content" class="LayoutObject">
							<attr>
								<left>0</left>
								<top>30</top>
								<width>father.width</width>
								<height>father.height-30</height>
							</attr>
							<children>
								<obj id="UnBindWnd.Content.Warning" class="ImageObject">
									<attr>
										<left>78</left>
										<top>55</top>
										<width>35</width>
										<height>35</height>
										<image>logo-mid</image>
										<drawmode>1</drawmode>
									</attr>
								</obj>
								<obj id="UnBindWnd.Content.Text" class="TextObject">
									<attr>
										<left>78+35+10</left>
										<top>55+5</top>
										<width>280</width>
										<height>80</height>
										<valign>top</valign>
										<halign>left</halign>
										<textcolor>DDDDDD</textcolor>
										<font>font.text16</font>
										<multiline>1</multiline>
										<text>当前绑定微信账号是（**）。
										解除绑定后，赚宝收益无法提现，除非
										您重新绑定。确定解绑吗？</text>
									</attr>
								</obj>
								<obj id="UnBindWnd.Content.UnBind" class="TipAddin.Button">
									<attr>
										<Text>解绑</Text>
										<TextFont>font.text16</TextFont>
										<TextColor>DDDDDD</TextColor>
										<left>(father.width-90*2-15)/2</left>
										<top>55+5+80+20</top>
										<width>90</width>
										<height>30</height>
										<NormalBkgID>setting-btn-normal</NormalBkgID>
										<DownBkgID>setting-btn-normal</DownBkgID>
										<HoverBkgID>setting-btn-hover</HoverBkgID>
										<DisableBkgID>setting-btn-hover</DisableBkgID>
									</attr>
									<eventlist>
										<event name="OnClick" file="UnBindWnd.xml.lua" func="OnClickUnBind" />
									</eventlist>	
								</obj>
								<obj id="UnBindWnd.Content.Cancel" class="TipAddin.Button">
									<attr>
										<Text>取消</Text>
										<TextFont>font.text16</TextFont>
										<TextColor>DDDDDD</TextColor>
										<left>(father.width-90*2-15)/2+90+15</left>
										<top>55+5+80+20</top>
										<width>90</width>
										<height>30</height>
										<NormalBkgID>setting-btn-normal</NormalBkgID>
										<DownBkgID>setting-btn-normal</DownBkgID>
										<HoverBkgID>setting-btn-hover</HoverBkgID>
										<DisableBkgID>setting-btn-hover</DisableBkgID>
									</attr>
									<eventlist>
										<event name="OnClick" file="UnBindWnd.xml.lua" func="OnClickCancel" />
									</eventlist>	
								</obj>
							</children>
						</obj>
					</children>
				</obj>
			</children>
		</obj>
	</objtreetemplate>

    <hostwndtemplate id="GXZB.UnBindWnd" class="ModalHostWnd">
        <attr>
            <layered>1</layered>
            <left>0</left>
            <top>0</top>
            <width>500</width>
            <height>280</height>
            
            <topmost>0</topmost>
            <visible>1</visible>
            <enable>1</enable>
            <maxbox>0</maxbox>
            <minbox>1</minbox>
            <minwidth>50</minwidth>
            <minheight>50</minheight>
			<sysmenu>0</sysmenu>
			<appwindow>1</appwindow>
            <fps>30</fps>
			<blur>1</blur>
        </attr>
		 <eventlist>
			<event name="OnCreate" file="UnBindWnd.xml.lua" func="OnCreate" />
        </eventlist>
    </hostwndtemplate>
</xlue>
