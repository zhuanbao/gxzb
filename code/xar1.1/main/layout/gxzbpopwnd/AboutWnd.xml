<xlue>
	<objtreetemplate id="GXZB.AboutWndTree" class="ObjectTreeTemplate">
		<attr>
			<left>0</left>
			<top>0</top>
			<width>274</width>
			<height>152</height>
		</attr>
		<obj id="root" class="TextureObject">
			<attr>
				<left>0</left>
				<top>0</top>
				<width>274</width>
				<height>152</height>
				<texture>common-bkg</texture>
			</attr>	
			<children>
				<obj id="AboutWnd.Caption" class="CaptionObject">
					<attr>
						<left>0</left>
						<top>0</top>
						<width>father.width</width>
						<height>father.height</height>
					</attr>
					<children>
						<obj id="AboutWnd.Caption.CloseBtn" class="TipAddin.Button">
							<attr>
								<left>father.width-25</left>
								<top>9</top>
								<width>12</width>
								<height>12</height>
								<NormalBkgID>GXZB.Caption.BtnClose.Normal</NormalBkgID>
								<DownBkgID>GXZB.Caption.BtnClose.Down</DownBkgID>
								<HoverBkgID>GXZB.Caption.BtnClose.Hover</HoverBkgID>
								<DisableBkgID>GXZB.Caption.BtnClose.Normal</DisableBkgID>
							</attr>
							<eventlist>
								<event name="OnClick" file="AboutWnd.xml.lua" func="OnClickClose" />
							</eventlist>	
						</obj>
						<obj id="AboutWnd.Title" class="TextObject">
							<attr>
								<left>18</left>
								<top>10</top>
								<width>70</width>
								<height>20</height>
								<valign>center</valign>
								<halign>left</halign>
								<textcolor>DDDDDD</textcolor>
								<font>font.text16</font>
								<text>关于</text>
							</attr>
						</obj>
						<obj id="AboutWnd.Logo" class="ImageObject">
							<attr>
								<left>28</left>
								<top>50</top>
								<width>50</width>
								<height>50</height>
								<image>logo-mid</image>
							</attr>
						</obj>
						<obj id="AboutWnd.Content.Version" class="TextObject">
							<attr>
								<left>106</left>
								<top>48</top>
								<width>60</width>
								<height>20</height>
								<valign>top</valign>
								<halign>left</halign>
								<textcolor>DDDDDD</textcolor>
								<font>font.text14</font>
								<text>程序版本：</text>
							</attr>
						</obj>
						<obj id="AboutWnd.Content.VersionValue" class="TextObject">
							<attr>
								<left>170</left>
								<top>48</top>
								<width>84</width>
								<height>20</height>
								<valign>top</valign>
								<halign>left</halign>
								<textcolor>DDDDDD</textcolor>
								<font>font.text14</font>
								<text></text>
							</attr>
						</obj>
						<obj id="AboutWnd.Content.Date" class="TextObject">
							<attr>
								<left>106</left>
								<top>75</top>
								<width>60</width>
								<height>20</height>
								<valign>top</valign>
								<halign>left</halign>
								<textcolor>DDDDDD</textcolor>
								<font>font.text14</font>
								<text>更新日期：</text>
							</attr>
						</obj>
						<obj id="AboutWnd.Content.DateValue" class="TextObject">
							<attr>
								<left>170</left>
								<top>75</top>
								<width>84</width>
								<height>20</height>
								<valign>top</valign>
								<halign>left</halign>
								<textcolor>DDDDDD</textcolor>
								<font>font.text14</font>
								<text></text>
							</attr>
						</obj>
						<obj id="AboutWnd.Content.Url" class="TextObject">
							<attr>
								<left>106</left>
								<top>107</top>
								<width>148</width>
								<height>20</height>
								<valign>top</valign>
								<halign>left</halign>
								<textcolor>DDDDDD</textcolor>
								<font>font.text14</font>
								<text>http://www.baidu.com</text>
							</attr>
						</obj>
					</children>
				</obj>
			</children>
		</obj>
	</objtreetemplate>

    <hostwndtemplate id="GXZB.AboutWnd" class="ModalHostWnd">
        <attr>
            <layered>1</layered>
            <left>0</left>
            <top>0</top>
            <width>274</width>
            <height>152</height>
            
            <topmost>0</topmost>
            <visible>1</visible>
            <enable>1</enable>
            <maxbox>0</maxbox>
            <minbox>1</minbox>
            <minwidth>50</minwidth>
            <minheight>50</minheight>
			<sysmenu>0</sysmenu>
			<appwindow>1</appwindow>
            <fps>30</fps>
			<blur>1</blur>
        </attr>
		 <eventlist>
			<event name="OnCreate" file="AboutWnd.xml.lua" func="OnCreate" />
        </eventlist>
    </hostwndtemplate>
</xlue>
