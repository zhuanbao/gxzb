<xlue>
	<control class="TitleCtrl">
		<attr_def>
		
		</attr_def>
		<method_def>
			<ChangeTitle file="TitleCtrl.xml.lua" func="ChangeTitle"/>
		</method_def>
		<event_def>
			
		</event_def>
		<objtemplate>
			<children>
				<obj id="TitleCtrl.Caption.Bkg" class="TextureObject">
					<attr>
						<left>0</left>
						<top>0</top>
						<width>father.width</width>
						<height>29</height>
						<texture>GXZB.Caption.Bkg</texture>
						<visible>false</visible>
					</attr>
					<children>
						<obj id="TitleCtrl.Caption.Logo" class="ImageObject">
							<attr>
								<left>16</left>
								<top>5</top>
								<width>20</width>
								<height>20</height>
								<image>GXZB.Caption.Logo</image>
							</attr>
						</obj>
						<obj id="TitleCtrl.Caption.Title" class="TextObject">
							<attr>
								<left>29+16</left>
								<top>0</top>
								<width>200</width>
								<height>father.height</height>
								<text>共享赚宝</text>
								<textcolor>system.black</textcolor>
								<font>font.default12</font>
								<valign>center</valign>
							</attr>
						</obj>
						
						<obj id="TitleCtrl.Caption.CloseBtn" class="TipAddin.Button">
							<attr>
								<left>father.width-25</left>
								<top>8</top>
								<width>14</width>
								<height>14</height>
								<NormalBkgID>GXZB.Caption.BtnClose.Normal</NormalBkgID>
								<DownBkgID>GXZB.Caption.BtnClose.Down</DownBkgID>
								<HoverBkgID>GXZB.Caption.BtnClose.Hover</HoverBkgID>
								<DisableBkgID>GXZB.Caption.BtnClose.Normal</DisableBkgID>
							</attr>
							<eventlist>
								<event name="OnClick" file="TitleCtrl.xml.lua" func="OnClickCloseBtn" />
								<event name="OnMouseEnter" file="TitleCtrl.xml.lua" func="OnMouseEnterCloseBtn" />
								<event name="OnMouseLeave" file="TitleCtrl.xml.lua" func="OnMouseLeave" />
							</eventlist>
						</obj>
						
						<obj id="TitleCtrl.Caption.BtnMin" class="TipAddin.Button">
							<attr>
								<left>father.width-25*2</left>
								<top>8</top>
								<width>14</width>
								<height>14</height>
								<NormalBkgID>GXZB.Caption.BtnMin.Normal</NormalBkgID>
								<DownBkgID>GXZB.Caption.BtnMin.Down</DownBkgID>
								<HoverBkgID>GXZB.Caption.BtnMin.Hover</HoverBkgID>
								<DisableBkgID>GXZB.Caption.BtnMin.Normal</DisableBkgID>
							</attr>
							<eventlist>
								<event name="OnClick" file="TitleCtrl.xml.lua" func="OnClickMinBtn" />
								<event name="OnMouseEnter" file="TitleCtrl.xml.lua" func="OnMouseEnterMinBtn" />
								<event name="OnMouseLeave" file="TitleCtrl.xml.lua" func="OnMouseLeave" />
							</eventlist>
						</obj>
						
						<obj id="TitleCtrl.Caption.Config" class="TipAddin.Button">
							<attr>
								<left>father.width-25*3 - 3</left>
								<top>8</top>
								<width>14</width>
								<height>14</height>
								<NormalBkgID>GXZB.Caption.Config.Normal</NormalBkgID>
								<DownBkgID>GXZB.Caption.Config.Down</DownBkgID>
								<HoverBkgID>GXZB.Caption.Config.Hover</HoverBkgID>
								<DisableBkgID>GXZB.Caption.Config.Normal</DisableBkgID>
							</attr>
							<eventlist>
								<event name="OnClick" file="TitleCtrl.xml.lua" func="OnClickConfigBtn" />
								<event name="OnMouseEnter" file="TitleCtrl.xml.lua" func="OnMouseEnterConfigBtn" />
								<event name="OnMouseLeave" file="TitleCtrl.xml.lua" func="OnMouseLeave" />
							</eventlist>
						</obj>
					</children>				
				</obj>			
			</children>
		</objtemplate>
	</control>
</xlue>